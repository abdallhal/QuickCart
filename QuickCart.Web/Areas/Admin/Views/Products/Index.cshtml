@model IEnumerable<ProductDTO>

@{
    ViewBag.PageTitle = "Product Mangment";
    ViewBag.CardTitle = "Products ";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}



<div class="mb-3">
    <a asp-action="Create" asp-controller="Products" class="btn btn-primary">New Product</a>
</div>


<table class="table table-hover" width="100%">
    <tr>
        <td>Name</td>
        <td>Description</td>
        <td>CreatedAt</td>
        <td>Actions</td>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.CreatedAt</td>

            <td>
                <div class="btn-group " role="group" aria-label="Products Actions">
                    <a asp-action="Edit" asp-controller="Products" asp-route-Id="@item.Id" class="btn btn-success m-2">Edit</a>
                    <a asp-action="Delete" asp-controller="Products" asp-route-Id="@item.Id" class="btn btn-danger m-2">Delete</a>
                </div>
            </td>
        </tr>
    }
</table>