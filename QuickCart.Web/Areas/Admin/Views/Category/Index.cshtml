@model IEnumerable<CategoryDTO>

@{
    ViewBag.PageTitle = "Category Mangment";
    ViewBag.CardTitle = "Categories ";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}


<div class="mb-3">
    <a asp-action="Create" asp-controller="Category" class="btn btn-primary">New Category</a>
    </div>


    
    
    <table class="table table-hover" width="100%">
        <tr>
        <td>Name</td>
        <td>Description</td>
        <td>CreatedAt</td>
            <td>Actions</td>
        </tr>
       
        @foreach (var item in Model)
    {
        
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.CreatedAt</td>
        
            <td>
                <div class="btn-group " role="group"  aria-label="Category Actions">
                    <a asp-action="Edit" asp-controller="Category" asp-route-Id="@item.Id" class="btn btn-success m-2">Edit</a>
                    <a asp-action="Delete" asp-controller="Category" asp-route-Id="@item.Id" class="btn btn-danger m-2">Delete</a>
                </div>
            </td>
        </tr>
    }
    </table>